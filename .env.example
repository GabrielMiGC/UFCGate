# --- Django ---
DJANGO_SECRET_KEY=change-me
DJANGO_DEBUG=0
# Comma-separated list of hosts (no scheme), e.g. api.example.com,10.0.0.5
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
# Comma-separated origins with scheme for CSRF (e.g. https://api.example.com)
DJANGO_CSRF_TRUSTED_ORIGINS=http://localhost:8000

# --- Database (choose one approach) ---
# 1) DATABASE_URL style (Postgres):
# DATABASE_URL=postgres://user:pass@db:5432/biometria

# 2) Explicit Postgres vars (useful when DB is outside Docker):
POSTGRES_DB=biometria
POSTGRES_USER=biometria
POSTGRES_PASSWORD=biometria
DB_HOST=db
DB_PORT=5432

# --- Bridge (hardware -> backend) ---
# Set these to point to the backend machine (DNS or IP) when running only the bridge
# Example: http://backend.my-net:8000 or http://10.0.0.50:8000
VERIFY_URL=http://web:8000/api/verify/
REGISTER_URL=http://web:8000/api/register/
CAPTURE_URL=http://web:8000/api/capture/submit/

# Serial config
SERIAL_PORT=auto
SERIAL_BAUD=9600
